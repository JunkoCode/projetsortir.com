{% extends 'base.html.twig' %}

{% block title %}Réinitialiser votre mot de passe{% endblock %}

{% block body %}

    <div class="container">
        {% for flash_error in app.flashes('reset_password_error') %}
            <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
        {% endfor %}
        <h1 class="my-5 col-md-6 offset-md-3">Réinitialiser votre mot de passe</h1>

        <div class="row">
            <div class="col-md-6 offset-md-3">
                <div class="alert alert-secondary">

                    <div class="col-12">
                        {{ form_start(requestForm) }}
                        {{ form_row(requestForm.email) }}

                        <small>
                            Entrer votre adresse email pour recevoir un lien de réinitialisation de mot de passe
                        </small>

                    </div>
                    <button class="btn btn-primary mt-2">Envoyé mail ?</button>
                        {{ form_end(requestForm) }}
                </div>
            </div>
        </div>
    </div>

{% endblock %}
