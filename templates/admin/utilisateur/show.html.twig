{% extends 'base.html.twig' %}

{% block title %}Utilisateur {{ utilisateur.pseudo }}{% endblock %}

{% block body %}
<div class="container">
    <h1 class="my-5"><i class="ion-ios-paper-outline"></i> Profil de {{ utilisateur.pseudo }} </h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ utilisateur.id }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ utilisateur.email }}</td>
            </tr>
            <tr>
                <th>Roles</th>
                <td>{{ utilisateur.roles ? utilisateur.roles|json_encode : '' }}</td>
            </tr>
            <tr>
                <th>Password</th>
                <td>{{ utilisateur.password }}</td>
            </tr>
            <tr>
                <th>Pseudo</th>
                <td>{{ utilisateur.pseudo }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ utilisateur.nom }}</td>
            </tr>
            <tr>
                <th>Prenom</th>
                <td>{{ utilisateur.prenom }}</td>
            </tr>
            <tr>
                <th>Telephone</th>
                <td>{{ utilisateur.telephone }}</td>
            </tr>
            <tr>
                <th>Photo</th>
                <td>{{ utilisateur.photo }}</td>
            </tr>
            <tr>
                <th>Administrateur</th>
                <td>{{ utilisateur.administrateur ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Actif</th>
                <td>{{ utilisateur.actif ? 'Yes' : 'No' }}</td>
            </tr>
        </tbody>
    </table>

    <a class="btn btn-outline-dark" href="{{ path('app_utilisateur_index') }}">Retour</a>

    <a class="btn btn-outline-warning" href="{{ path('app_utilisateur_edit', {'id': utilisateur.id}) }}">Modifier</a>

    <a class="btn btn-outline-danger" onclick="return confirm('Souhaitez vous supprimer cette utilisateur ?');" href="{{ path('app_utilisateur_delete',{'id':utilisateur.id })}}">Supprimer</a>
</div>
{% endblock %}
