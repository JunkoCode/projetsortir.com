{% extends 'base.html.twig' %}

{% block title %}Sorties{% endblock %}

{% block body %}
<div class="container">
    <h1 class="my-5">Sorties</h1>

    <table class="table table-striped table-hover">
        <thead>
            <tr class="table-dark">
                <th>Id</th>
                <th>Nom</th>
                <th>DateLimiteInscription</th>
                <th>DateHeureDebut</th>
                <th>Duree</th>
                <th>NombreInscriptionMax</th>
                <th>InfoSortie</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for sortie in sorties %}
            <tr onMouseOut="javascript:this.style.background='#ffffff'"
                style="cursor: pointer;"
                onMouseOver="javascript:this.style.background='#fddba6'"
                onclick="location.href='{{ path('app_sortie_show', {'id': sortie.id}) }}';"
            >
                <td>{{ sortie.id }}</td>
                <td>{{ sortie.nom }}</td>
                <td>{{ sortie.dateLimiteInscription ? sortie.dateLimiteInscription|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ sortie.dateHeureDebut ? sortie.dateHeureDebut|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ sortie.duree ? sortie.duree|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ sortie.nombreInscriptionMax }}</td>
                <td>{{ sortie.infoSortie }}</td>
                <td>
                    <a class="icon ion-edit" href="{{ path('app_sortie_edit', {'id': sortie.id}) }}"></a>
                    <a class="icon ion-trash-a"
                       style="color: red"
                       href="{{ path('app_sortie_delete',{'id':sortie.id })}}"
                       onclick="return confirm('Souhaitez vous supprimer cette sortie ?');">
                    </a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">Il n'y a aucun enregistrement</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

</div>
{% endblock %}
