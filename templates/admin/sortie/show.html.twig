{% extends 'base.html.twig' %}

{% block title %}Sortie{% endblock %}

{% block body %}
<div class="container">
    <h1 class="my-5"><i class="ion-ios-paper-outline"></i> Sortie "{{ sortie.nom }}" </h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ sortie.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ sortie.nom }}</td>
            </tr>
            <tr>
                <th>DateLimiteInscription</th>
                <td>{{ sortie.dateLimiteInscription ? sortie.dateLimiteInscription|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>DateHeureDebut</th>
                <td>{{ sortie.dateHeureDebut ? sortie.dateHeureDebut|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Duree</th>
                <td>{{ sortie.duree ? sortie.duree|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>NombreInscriptionMax</th>
                <td>{{ sortie.nombreInscriptionMax }}</td>
            </tr>
            <tr>
                <th>InfoSortie</th>
                <td>{{ sortie.infoSortie }}</td>
            </tr>
        </tbody>
    </table>

    <a class="btn btn-outline-dark" href="{{ path('app_sortie_index') }}">Retour</a>

    <a class="btn btn-outline-warning" href="{{ path('app_sortie_edit', {'id': sortie.id}) }}">Modifier</a>

    <a class="btn btn-outline-danger" onclick="return confirm('Souhaitez vous supprimer cette sortie ?');" href="{{ path('app_sortie_delete',{'id':sortie.id })}}">Supprimer</a>
</div>
{% endblock %}
