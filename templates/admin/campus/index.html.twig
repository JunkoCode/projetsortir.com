{% extends 'base.html.twig' %}

{% block title %}Campus{% endblock %}

{% block body %}
<div class="container">
    <h1 class="my-5">Campus</h1>

    <table class="table table-striped table-hover">
        <thead>
            <tr class="table-dark">
                <th>Id</th>
                <th>Nom</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for campus in campuses %}
            <tr onMouseOut="javascript:this.style.background='#ffffff'"
                style="cursor: pointer;"
                onMouseOver="javascript:this.style.background='#fddba6'"
                onclick="location.href='{{ path('app_campus_show', {'id': campus.id}) }}';"
            >
                <td>{{ campus.id }}</td>
                <td>{{ campus.nom }}</td>
                <td>
                    <a class="icon ion-edit" href="{{ path('app_campus_edit', {'id': campus.id}) }}"></a>
                    <a class="icon ion-trash-a"
                       style="color: red"
                       href="{{ path('app_campus_delete',{'id':campus.id })}}"
                       onclick="return confirm('Souhaitez vous supprimer ce campus ?');">
                    </a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">Il n'y a aucun enregistrement</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a class="btn btn-outline-dark" href="{{ path('app_campus_new') }}">Ajouter campus</a>
</div>
{% endblock %}
