{% extends 'base.html.twig' %}

{% block title %}Etats{% endblock %}

{% block body %}
<div class="container">
    <h1 class="my-5">Etats</h1>

    <table class="table table-striped table-hover">
        <thead>
            <tr class="table-dark">
                <th>Id</th>
                <th>Libelle</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for etat in etats %}
            <tr onMouseOut="javascript:this.style.background='#ffffff'"
                style="cursor: pointer;"
                onMouseOver="javascript:this.style.background='#fddba6'"
                onclick="location.href='{{ path('app_etat_show', {'id': etat.id}) }}';"
            >
                <td>{{ etat.id }}</td>
                <td>{{ etat.libelle }}</td>
                <td>
                    <a class="icon ion-edit" href="{{ path('app_etat_edit', {'id': etat.id}) }}"></a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">Il n'y a aucun enregistrement</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a class="btn btn-outline-dark" href="{{ path('app_etat_new') }}">Ajouter un Etat</a>
</div>
{% endblock %}
