{% extends 'base.html.twig' %}

{% block title %}Ville{% endblock %}
{% block body %}
<div class="container">
    <h1 class="my-5"><i class="ion-location"></i> Ville de {{ ville.nom }} </h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ ville.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ ville.nom }}</td>
            </tr>
            <tr>
                <th>CodePostal</th>
                <td>{{ ville.codePostal }}</td>
            </tr>
        </tbody>
    </table>

    <a class="btn btn-outline-dark" href="{{ path('app_ville_index') }}">Retour</a>

    <a class="btn btn-outline-warning" href="{{ path('app_ville_edit', {'id': ville.id}) }}">Modifier</a>

    <a class="btn btn-outline-danger" onclick="return confirm('Souhaitez vous supprimer cette ville ?');" href="{{ path('app_ville_delete',{'id':ville.id })}}">Supprimer</a>
</div>
{% endblock %}
