{% extends 'base.html.twig' %}

{% block title %}Créer une nouvelle sortie{% endblock %}

{% block body %}
    <div class="container my-5">
        <h1 class="my-5">Créer une nouvelle sortie</h1>

        {{ form_start(form) }}

        <div class="row d-flex flex-row align-items-stretch">
            <div class="col-6 h-100">
                <div class="alert alert-secondary w-100">
                    <div style="min-height: 75px">
                        <h2 class="alert-heading">Informations générales</h2>
                    </div>
                    <hr>
                    {{ form_row(form.nom) }}
                    {{ form_row(form.dateLimiteInscription) }}
                    {{ form_row((form.dateHeureDebut)) }}
                    {{ form_row((form.nombreInscriptionMax)) }}
                    {{ form_row((form.duree)) }}
                    {{ form_row((form.infoSortie)) }}
                </div>
            </div>
            <div class="col-6 h-100">

                <div class="alert alert-secondary">
                    <div style="min-height: 75px;"><h2 class="alert-heading">Lieu de la sortie</h2>
                    </div>
                    <hr>
                    <div class="mb-3">
                        <label for="campus" class="form-label">Campus</label>
                        <p id="campus" class="form-control bg-grey">{{ app.user.campus.nom }}</p>
                    </div>
                    <div class="mb-3">
                        <label for="ville" class="form-label">Ville</label>
                        <p id="ville" class="form-control bg-grey">Ville</p>
                    </div>
                    <div class="row my-3 d-flex align-items-center justify-content-center">
                        {{ form_label(form.lieu) }}
                        <div class="col col-10">
                            {{ form_widget(form.lieu) }}
                        </div>
                        <div class="d-flex col col-2 ml-auto">
                            <a href="#">
                                <svg xmlns="http://www.w3.org/2000/svg" width="2rem" height="2rem" fill="currentColor"
                                     class="bi bi-plus-circle" viewBox="0 0 16 16">
                                    <path d="M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14zm0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16z"/>
                                    <path d="M8 4a.5.5 0 0 1 .5.5v3h3a.5.5 0 0 1 0 1h-3v3a.5.5 0 0 1-1 0v-3h-3a.5.5 0 0 1 0-1h3v-3A.5.5 0 0 1 8 4z"/>
                                </svg>
                            </a>
                        </div>
                        {{ form_errors(form.lieu) }}
                    </div>
                    <div class="mb-3">
                        <label for="rue" class="form-label">Rue</label>
                        <p id="rue" class="form-control bg-grey">Rue du lieu</p>
                    </div>
                    <div class="mb-3">
                        <label for="code_postal" class="form-label">Code Postal</label>
                        <p id="code_postal" class="form-control bg-grey">Code postal du lieu</p>
                    </div>
                    {{ form_row(form.latitude) }}
                    {{ form_row(form.longitude) }}
                    {{ form_row(form._token) }}
                </div>


            </div>
            {# <button type="submit" class="btn btn-primary">Confirmer inscription</button> #}
        </div>
        <div class="row mt-5">
            <div class="col text-center">
                {{ form_row(form.btnEnregistrer) }}
            </div>

            <div class="col text-center">
                {{ form_row(form.btnPublier) }}
            </div>

            <div class="col text-center">
                <a href="#" class="btn btn-primary btn-lg" role="button">Annuler</a>
            </div>
        </div>


        {# {{ form_end(form) }} #}
        {{ form_end(form, {'render_rest': false}) }}

    </div>

{% endblock %}
